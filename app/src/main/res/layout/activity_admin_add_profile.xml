<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".AdminAddProfileScreen">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_20sdp"
        app:cardBackgroundColor="@color/honey_base"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_10sdp"
        app:contentPadding="@dimen/_10sdp"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:fontFamily="@font/glamebold"
                android:textSize="@dimen/_20sdp"
                />

            <EditText
                android:id="@+id/editScientific"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:ems="10"
                android:inputType="text"
                android:hint="Scientific"
                android:fontFamily="@font/glame"
                android:textSize="@dimen/_20sdp"
                tools:layout_editor_absoluteX="110dp"
                tools:layout_editor_absoluteY="121dp" />

            <EditText
                android:id="@+id/editCommon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_70sdp"
                android:ems="10"
                android:inputType="text"
                android:hint="Common"
                android:fontFamily="@font/glame"
                android:textSize="@dimen/_20sdp"
                tools:layout_editor_absoluteX="98dp"
                tools:layout_editor_absoluteY="55dp" />

            <RadioGroup
                android:id="@+id/editCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_130sdp"
                android:ems="10"
                android:inputType="text"
                tools:layout_editor_absoluteX="110dp"
                tools:layout_editor_absoluteY="121dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:fontFamily="@font/glame"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/honey_crisp"
                    android:onClick="radioButtonOnClick"
                    tools:ignore="UsingOnClickInXml" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:text="Hemiptera"
                    android:fontFamily="@font/glame"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/honey_crisp"
                    android:buttonTint="@color/white"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:text="Lepidoptera"
                    android:fontFamily="@font/glame"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/honey_crisp"
                    android:buttonTint="@color/white"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:text="Diptera"
                    android:fontFamily="@font/glame"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/honey_crisp"
                    android:buttonTint="@color/white"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:text="Hymenoptera"
                    android:fontFamily="@font/glame"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/honey_crisp"
                    android:buttonTint="@color/white"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:text="Coleoptera"
                    android:fontFamily="@font/glame"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/honey_crisp"
                    android:buttonTint="@color/white"
                    />

            </RadioGroup>

            <EditText
                android:id="@+id/editLifeSpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_315sdp"
                android:ems="10"
                android:inputType="number"
                android:hint="Life Span (Months)"
                android:fontFamily="@font/glame"
                android:textSize="@dimen/_20sdp"
                tools:layout_editor_absoluteX="98dp"
                tools:layout_editor_absoluteY="55dp" />

            <EditText
                android:id="@+id/editDescription"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:padding="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_380sdp"
                android:ems="10"
                android:inputType="textMultiLine"
                android:hint="Description"
                android:fontFamily="@font/glame"
                android:textSize="@dimen/_20sdp"
                android:singleLine="false"
                tools:layout_editor_absoluteX="95dp"
                tools:layout_editor_absoluteY="350dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/submit"
                android:layout_marginTop="@dimen/_450sdp"
                android:text="Submit"
                android:background="@null"
                android:fontFamily="@font/glame"
                android:textSize="@dimen/_30sdp"/>

    </androidx.cardview.widget.CardView>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/honey_base"
    tools:context=".AdminReadProfileScreen">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_20sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_10sdp"
        app:contentPadding="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/glamebold"
            android:text="Profile"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/honey_hive"/>

        <TextView
            android:id="@+id/scientific"
            android:layout_width="@dimen/_255sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:ems="10"
            android:fontFamily="@font/glame"
            android:padding="@dimen/_20sdp"
            android:text="Scientific: "
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/honey_hive"/>

        <TextView
            android:id="@+id/common"
            android:layout_width="@dimen/_255sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_90sdp"
            android:ems="10"
            android:fontFamily="@font/glame"
            android:inputType="text"
            android:padding="@dimen/_20sdp"
            android:text="Common: "
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/honey_hive"/>

        <TextView
            android:id="@+id/category"
            android:layout_width="@dimen/_255sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_170sdp"
            android:ems="10"
            android:fontFamily="@font/glame"
            android:inputType="text"
            android:padding="@dimen/_20sdp"
            android:text="Category: "
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/honey_hive"/>

        <TextView
            android:id="@+id/lifeSpan"
            android:layout_width="@dimen/_255sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_250sdp"
            android:ems="10"
            android:fontFamily="@font/glame"
            android:inputType="number"
            android:padding="@dimen/_20sdp"
            android:text="LifeSpan: "
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/honey_hive" />

        <RelativeLayout
            android:layout_width="@dimen/_255sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_330sdp">

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/glame"
                android:hint="Description: "
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/honey_hive"
                android:textSize="@dimen/_20sdp" />

            <TextView
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="@dimen/_100sdp"
                android:layout_below="@id/description"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="@color/honey_hive"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat"
                />

        </RelativeLayout>

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_470sdp"
            android:src="@drawable/backspace_24"
            app:tint="@color/honey_hive" />

    </androidx.cardview.widget.CardView>


</LinearLayout>